<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".activity.advanced.CardViewActivity">

    <LinearLayout
        android:id="@+id/ll_card"
        android:gravity="center"
        android:layout_width="400dp"
        android:layout_height="300dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="380dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg1" />

    </androidx.cardview.widget.CardView>
    </LinearLayout>
    <SeekBar
        android:id="@+id/seek_bar_radius"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_card"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/seek_bar_radius"
        android:layout_toRightOf="@id/seek_bar_radius"
        android:text="控制圆角大小"
        android:textColor="@color/black" />

    <SeekBar
        android:id="@+id/seek_bar_elevation"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek_bar_radius"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/seek_bar_elevation"
        android:layout_toRightOf="@id/seek_bar_elevation"
        android:text="控制阴影大小"
        android:textColor="@color/black" />

    <SeekBar
        android:id="@+id/seek_bar_size"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek_bar_elevation"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/seek_bar_size"
        android:layout_toRightOf="@id/seek_bar_size"
        android:text="控制卡片大小"
        android:textColor="@color/black" />

</RelativeLayout>